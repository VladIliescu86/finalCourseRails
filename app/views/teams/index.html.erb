<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Abbreviation</th>
      <th>Manager</th>
      <th>Players</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.id %></td>
        <td><%= team.name %></td>
        <td><%= team.abbreviation %></td>
<!--        <td><%#= team.manager.name %></td>-->
        <td><% team.players.each do |player| %>
            <%= player.name %><br />
          <% end %></td>>
        <td><%= link_to 'Show', team %></td>
<!--        <td><%#= image_tag 'Screenshot 2019-09-02 at 16.12.59.png' %></td>-->
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

